extends layout
block link
  link(rel="stylesheet", href="./stylesheets/validate.css")
block script 
  script(src="./javascripts/validate.js") 
block content
  #bg-page
    img#background(src="./images/background-login.png", alt="Background not available")
  section#login-section
    h1= title
    form#login-form(action="/signup", method="post") 
      .input-placeholder
        label(for="username") Username:
        input#username(type="text" placeholder="Desired username" name="username" pattern="[A-Za-z][A-Za-z0-9_-]+" required)
      .input-placeholder
        label(for="password") Password:
        input#password(type="password" placeholder="Desired password" pattern=".{8}.*" name="password" required) 
        p(style="color:red;")= error?error:''
      .input-placeholder
        p If you already have an account, #[a(href="/login") Log In Here] 
      .row.justify-space 
        input#submit-form.primary-button.button(type="submit" value="Confirm")
        a.button(href="/login") #[input.secondary-button(type="button" value="BACK")]
  script. 
    $('#submit-form').on('click', function(event) {
        if ($('#username').val()===''||$('#password').val()==='') {
            alert("Please do not leave the fields empty");
        }
    });